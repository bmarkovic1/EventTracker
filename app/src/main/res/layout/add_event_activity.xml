<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAddEventType"
        android:text="EVENT:"
        android:layout_below="@id/tvEventType"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"/>
    <AutoCompleteTextView
        android:layout_below="@id/tvAddEventType"
        android:id="@+id/actvEventType"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_large"
        android:inputType="text"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAddEventDate"
            android:text="DAY:"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:textSize="@dimen/list_text_size"/>
        <TextView
            android:id="@+id/tvAddEventMonth"
            android:text="MONTH:"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:textSize="@dimen/list_text_size"/>
        <TextView
            android:id="@+id/tvAddEventYear"
            android:text="YEAR:"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:textSize="@dimen/list_text_size"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etEventDate"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="0.33"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etEventMonth"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.33"
            android:background="@color/light_grey"
            android:layout_margin="@dimen/margin_small"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etEventYear"
            android:background="@color/light_grey"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.33"
            android:layout_margin="@dimen/margin_small"
            android:inputType="number"/>
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fGoogleMap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/add_new"
        android:layout_margin="@dimen/margin_small"
        android:textStyle="bold"
        android:textSize="@dimen/button_text_size"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:paddingTop="@dimen/padding_button_top_main"
        android:paddingBottom="@dimen/padding_button_top_main"
        android:includeFontPadding="true"/>

</LinearLayout>